<%= form_for(@movie) do |m| %>
  <%= render 'shared/error_messages', object: m.object %>

  <%= m.label :title %>
  <%= m.text_field :title, autofocus: true %>

  <br />
  <%= m.label :plot %>
  <%= m.text_field :plot %>

  <br />
  <%= m.label :actors %>
  <%= m.text_field :actors %>

  <br />
  <%= m.label :released %>
  <%= m.text_field :released %>

  <br />
  <%= m.label :genre %>
  <%= m.text_field :genre %>

  <br />
  <%= m.label :trailer %>
  <%= m.text_field :trailer %>

  <br />
  <%= m.label :earnings %>
  <%= m.text_field :earnings %> 

  <br />
  <%= m.submit "New/Edit Movie" %>
<% end %>

