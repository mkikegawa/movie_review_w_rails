<h1 class="text-center"><%= @movie.title %></h1>
<div class="row well">
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-5 col-md-5 col-lg-4">
    <div class="embed-responsive embed-responsive-4by3">
       <iframe class="embed-responsive-item" src="//<%= @movie.trailer %>"></iframe>
    </div>
  </div>
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-5 col-md-5 col-lg-4">
    <%= @movie.plot %>
  </div>
  <div class="col-xs-offset-1 col-xs-10 col-sm-offset-1 col-sm-10 col-md-10 col-lg-4">
    <dl>
       <dt>Stars:</dt>
       <dd><%= @movie.actors_list %></dd>
       <dt>Released:</dt>
       <dd><%= @movie.released %></dd>
       <dt>Genre:</dt>
       <dd><%= @movie.genre_list %></dd>
       <dt>Earnings:</dt>
       <dd>$<%= @movie.earnings %>M</dd>
    </dl>
  </div>
</div>
<br />

<div class="row">
  <div class="col-md-offset-1 col-md-2">
